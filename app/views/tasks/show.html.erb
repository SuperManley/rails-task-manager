<h2><%= @task.title %></h2>
<p><%= @task.details%></p>
<p><%= @task.completed%></p>

<div class="container">
<%= link_to "Edit this task", task_edit_path(@task) %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "View tasks", tasks_path %>
</div>
